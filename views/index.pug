html
    head
        link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css", rel="stylesheet")
    body
        nav.navbar.navbar-expand-sm.navbar-light.bg-light
            a(href="#").navbar-brand Simple Scraper
            button(type="button", data-toggle="collapse", data-target="#collapsibleNavId", aria-controls="collapsibleNavId",
                aria-expanded="false", aria-label="Toggle navigation").navbar-toggler.d-lg-none
                span.navbar-toggler-icon
            .collapse.navbar-collapse#collapsibleNavId
                ul.navbar-nav.mr-auto.mt-2.mt-lg-0
                    li.nav-item.active
                        a(href="#").nav-link Home
                    li.nav-item
                        a(href= '#').nav-link Link 1
        .container
            .row.d-flex.justify-content-center.my-4
                .col-md-12.col-lg-12.col-sm-12.col-xs-12
                    form(action="/", method="post").form-inline
                        label(for="sumber").mr-2 Pilih Sumber
                        select.custom-select.mr-2(name="sumber")#sumber
                            option(selected) Select one
                                each news in newsData
                                    option(value=news.name)= news.name
                        button.btn.btn-primary Fetch
            h3 Hasil Scraping
            .row.d-flex.justify-content-start
                if status
                    .col-md-12
                        h4=status
                if results
                    each data in results
                        .col-md-4.col-sm-12.col-lg-4
                            .card.my-3
                                .card-body
                                    img.img-fluid(src=data.innerImage, height="200px")
                                    .card-title
                                        h4= data.titleArticle
                                    .card-text
                                        p= data.newsContent
                                        a.btn.btn-primary.btn-sm(href=data.link) Menuju Berita
        script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js")
        |
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js")
        |
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js")
